@model Hotel_Manager.Models.Reservation

@{
    ViewData["Title"] = "Edit Reservation";
}

<h1>Edit Reservation</h1>

<div class="mb-4">
    <h4>Current Guest</h4>
    <p>@Model.User?.FirstName @Model.User?.LastName (@Model.User?.Email)</p>
    <small class="text-muted">Guest information cannot be changed here.</small>
</div>

<div class="row">
    <div class="col-md-7">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" />

            <h4>Reservation Details</h4>
            <hr />

            <div class="form-group mb-3">
                <label asp-for="CheckInDate" class="control-label"></label>
                <input asp-for="CheckInDate" class="form-control" required />
                <span asp-validation-for="CheckInDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CheckOutDate" class="control-label"></label>
                <input asp-for="CheckOutDate" class="form-control" required />
                <span asp-validation-for="CheckOutDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label">Status</label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label>Room Type</label>
                <select name="roomTypeId" class="form-control" asp-items="@(ViewData["RoomTypes"] as SelectList)" required></select>
            </div>


            <div class="form-group mb-3">
                <label>Additional Services (hold Ctrl to select multiple)</label>
                <select name="serviceIds" class="form-control" multiple
                        asp-items="@(ViewData["Services"] as MultiSelectList)">
                </select>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Save Changes" class="btn btn-primary btn-lg" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}